{% extends 'base.html.twig' %}
{% block title %}Log in!
{% endblock %}
{% block body %}
    <div class="wrapper fadeInDown">
        <div id="formContent">
            <div class="fadeIn first">
                <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
                {# <img alt="User Icon" id="icon" src="http://danielzawadzki.com/codepen/01/icon.svg" /> #}
            </div>
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                {# <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1> #}
                {# <label class="sr-only fadeIn" for="inputEmail">Email</label> #}
                <input
                type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control fadeIn second" placeholder="Email" required autofocus>
                {# <label class="sr-only fadeIn" for="inputPassword">Password</label> #}
                <input class="form-control  fadeIn third" id="inputPassword" name="password" placeholder="Password" required type="password">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">


               


                <button class="btn btn-lg btn-primary fadeIn fourth" type="submit">
                    Sign in
                </button>
                 {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                                                                                    See https://symfony.com/doc/current/security/remember_me.html #}

                <div class="checkbox mb-3"  id="formFooter">
                    <label class="underlineHover">
                        <input name="_remember_me" type="checkbox">
                        Remember me
                    </label>
                </div>
            </form>
        </div>
    </div>
{% endblock %}